<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="65dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/smallViewImagen"
        android:scaleType="fitXY"
    />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/smallTextCosto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/notificacion_costo"
            android:textSize="30dp"
            android:textColor="#fffffcf9"
            android:textStyle="bold"
        />

        <TextView
            android:id="@+id/smallTextInformacion"
            android:layout_width="113dp"
            android:layout_height="63dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:layout_weight="2"
            android:background="@drawable/notificacion_informacion"
            android:textSize="18dp"
            android:textColor="#fffffcf9"
            android:textStyle="bold"
        />

        <ImageView
            android:id="@+id/smallFlecha"
            android:layout_width="40dp"
            android:layout_height="55dp"
            android:layout_weight=".3"
            android:layout_margin="3dp"
            android:background="@drawable/flecha"
        />

        </LinearLayout>



</FrameLayout>