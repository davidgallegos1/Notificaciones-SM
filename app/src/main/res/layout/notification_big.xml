<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="260dp"
    >
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/bigViewImagen"
        android:scaleType="centerCrop"
    />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bigTextCosto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:background="@drawable/notificacion_costo"
            android:textSize="40dp"
            android:textColor="#fffffeee"
            android:textStyle="bold"
        />


        <TextView
            android:id="@+id/bigTextInformacion"
            android:layout_width="fill_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/notificacion_informacion"
            android:padding="11dp"
            android:textSize="20dp"
            android:textColor="#fffffff1"
            android:textStyle="bold"
        />

    </LinearLayout>
</FrameLayout>